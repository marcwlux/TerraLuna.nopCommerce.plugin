@model Nop.Plugin.Payments.TerraLuna.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync(typeof(StoreScopeConfigurationViewComponent))

<form asp-controller="WMCryptoBitcoin" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <p>@T("Plugins.Payments.TerraLuna.Instructions")</p>
                <div class="form-group row">
                    <div class="col-md-3">
                        
                        <nop-override-store-checkbox asp-for="TransactModeId_OverrideForStore" asp-input="TransactModeId" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        @T("Plugins.Payments.TerraLuna.Fields.TransactMode")
                    </div>
                    <div class="col-md-9">
                        <nop-select asp-for="TransactModeId" asp-items="Model.TransactModeValues" />
                        <span asp-validation-for="TransactModeId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFee_OverrideForStore" asp-input="AdditionalFee" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        @T("Plugins.Payments.TerraLuna.Fields.AdditionalFee")
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFee" />
                        <span asp-validation-for="AdditionalFee"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="AdditionalFeePercentage_OverrideForStore" asp-input="AdditionalFeePercentage" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        @T("Plugins.Payments.TerraLuna.Fields.AdditionalFeePercentage")
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AdditionalFeePercentage" />
                        <span asp-validation-for="AdditionalFeePercentage"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="TatumApiKey_OverrideForStore" asp-input="TatumApiKey" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        @T("Plugins.Payments.TerraLuna.Fields.TatumApiKey")
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="TatumApiKey" />
                        <span asp-validation-for="TatumApiKey"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="BitcoinAddress_OverrideForStore" asp-input="BitcoinAddress" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                        @T("Plugins.Payments.TerraLuna.Fields.BitcoinAddress")
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="BitcoinAddress" />
                        <span asp-validation-for="BitcoinAddress"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>